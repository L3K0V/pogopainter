<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/repeatable"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <game.graphics.Panel
            android:id="@+id/canvasPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/redField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true" >

                <ImageView
                    android:id="@+id/redPlayer"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/red" />

                <TextView
                    android:id="@+id/red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/redScore"
                    android:layout_width="wrap_content"
                     android:paddingLeft="2dp"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/blueField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/redField" >

                <ImageView
                    android:id="@+id/bluePlayer"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/blue" />

                <TextView
                    android:id="@+id/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blue:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/blueScore"
                    android:layout_width="wrap_content"
                     android:paddingLeft="2dp"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/greenField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/blueField" >

                <ImageView
                    android:id="@+id/greenPlayer"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/green" />

                <TextView
                    android:id="@+id/green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Green:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/greenScore"
                    android:layout_width="wrap_content"
                     android:paddingLeft="2dp"
                    android:layout_height="wrap_content"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yellowField"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/greenField" >

                <ImageView
                    android:id="@+id/yellowPlayer"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/yellow" />

                <TextView
                    android:id="@+id/yellow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yellow:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/yellowScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:paddingLeft="2dp"
                    android:text="Small Text"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/joystick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout1"
            android:layout_margin="20dp"
            android:src="@drawable/joystick" />

        <ToggleButton
            android:id="@+id/buttonDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/joystick"
            android:layout_centerHorizontal="true"
            android:text="Down"
            android:visibility="visible" />

        <Button
            android:id="@+id/buttonAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonDown"
            android:layout_alignTop="@+id/buttonLeft"
            android:layout_centerHorizontal="true"
            android:padding="0dp"
            android:text="Action"
            android:visibility="visible" />

        <ToggleButton
            android:id="@+id/buttonUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/buttonDown"
            android:layout_alignRight="@+id/buttonDown"
            android:layout_alignTop="@+id/joystick"
            android:text="Up"
            android:visibility="visible" />

        <ToggleButton
            android:id="@+id/buttonLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonDown"
            android:layout_alignLeft="@+id/joystick"
            android:layout_below="@+id/buttonUp"
            android:layout_toLeftOf="@+id/buttonAction"
            android:text="Left"
            android:visibility="visible" />

        <ToggleButton
            android:id="@+id/buttonRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/buttonAction"
            android:layout_alignRight="@+id/joystick"
            android:layout_alignTop="@+id/buttonAction"
            android:layout_toRightOf="@+id/buttonAction"
            android:text="Right"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>