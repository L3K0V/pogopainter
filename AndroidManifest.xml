<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="game.pogopainter"
    android:versionCode="0"
    android:versionName="0.4.1" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-sdk android:minSdkVersion="7" />
    <uses-sdk android:maxSdkVersion="13" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name=".PogoPainterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="locale|keyboard|keyboardHidden|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUs"
            android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog" 
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name=".AboutPogo"
            android:label="@string/about_title"
            android:theme="@android:style/Theme.Dialog" 
            android:screenOrientation="portrait">
        </activity>
         <activity
            android:name=".AboutTabActivity"
            android:label="@string/about_title" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".BoardActivity"
            android:label="SinglePlayer"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".MultiplayerActivity"
            android:label="@string/multiplayer_title" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ClassicHelpActivity"
            android:label="@string/classic_help_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CoopHelpActivity"
            android:label="@string/coop_help_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DeathmatchHelpActivity"
            android:label="@string/deathmatch_help_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/settings_title"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ScoreSystemHelpActivity"
            android:label="Score system"
            android:theme="@android:style/Theme.Dialog"
            android:screenOrientation="portrait" >
        </activity>
        <activity 
            android:name=".CanvasActivity"
            android:label="Canvas" 
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>